{
  "name": "frontend-app",
  "version": "0.1.0",
  "description": "Frontend app",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:anhpham1509/cd-pipeline-poc.git"
  },
  "scripts": {
    "serve": "webpack-dev-server",
    "dist": "NODE_ENV=production webpack -p --bail --display-error-details",
    "test": "jest --coverage",
    "pretest": "rm -rf coverage",
    "format": "parallel -k 'npm run format:{}' ::: js ts scss md",
    "format:js": "prettier --write \"**/*.js{,x}\"",
    "format:ts": "prettier --write \"**/*.ts{,x}\"",
    "format:scss": "prettier --write \"**/*.scss\"",
    "format:md": "prettier --write \"**/*.md\"",
    "lint": "parallel -k 'npm run lint:{}' ::: ts scss",
    "lint:fix": "parallel -k 'npm run lint:{}:fix' ::: ts scss",
    "lint:ts": "tslint 'apps/frontend/**/*.{ts,tsx}'",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:scss": "stylelint 'apps/frontend/**/*.scss' --syntax scss",
    "lint:scss:fix": "npm run lint:scss -- --fix"
  },
  "dependencies": {
    "bootstrap": "4.0.0",
    "jquery": "1.12.4",
    "moment": "2.20.1",
    "popper.js": "1.12.9",
    "react": "16.2.0",
    "react-dom": "16.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "3.1.9",
    "@types/jest": "22.1.2",
    "@types/jquery": "3.3.1",
    "@types/react": "16.0.38",
    "@types/react-dom": "16.0.4",
    "@types/react-hot-loader": "3.0.6",
    "autoprefixer": "8.0.0",
    "babel-core": "6.26.0",
    "babel-jest": "22.2.2",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.6",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "clean-webpack-plugin": "0.1.18",
    "concurrently": "3.5.0",
    "copy-webpack-plugin": "4.5.1",
    "core-js": "2.5.3",
    "css-loader": "0.28.9",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.1",
    "exports-loader": "0.7.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "html-webpack-plugin": "2.30.1",
    "jest": "22.3.0",
    "node-sass": "4.7.2",
    "postcss-loader": "2.1.0",
    "prettier": "1.10.2",
    "react-addons-test-utils": "15.6.2",
    "react-docgen-typescript": "1.2.5",
    "react-hot-loader": "4.0.0",
    "react-test-renderer": "16.2.0",
    "react-transition-group": "2.2.1",
    "sass-loader": "6.0.6",
    "streamifier": "0.1.1",
    "style-loader": "0.20.1",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0",
    "ts-jest": "22.0.4",
    "ts-loader": "3.5.0",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.7.0",
    "tslint-react": "3.5.1",
    "typescript": "2.7.1",
    "uglifyjs-webpack-plugin": "1.1.8",
    "url-loader": "0.6.2",
    "webpack": "3.11.0",
    "webpack-dev-server": "2.11.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jestFileMock.js",
      "\\.(scss|css)$": "<rootDir>/jestFileMock.js"
    },
    "testMatch": [
      "<rootDir>/**/*.spec.{ts,tsx,js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/jestSetup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "roots": [
      "<rootDir>",
      "<rootDir>/frontend"
    ],
    "transform": {
      "\\.jsx?$": "babel-jest",
      "\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverageFrom": [
      "frontend/**/*.{ts,tsx,js,jsx}",
      "!frontend/index.tsx"
    ]
  }
}
